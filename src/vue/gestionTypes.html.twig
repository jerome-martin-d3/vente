{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Administration {% endblock %}

{% block contenu %} 
    
    <h1>Administration - Gestion des types </h1>
    
    <div class="panel panel-default">
  <!-- Table -->
  <div class="table-responsive">
  <table class="table table-hover table-striped">
      <tr><th>Libellé</th></tr>
      {% for t in liste %}
          <tr><td>{{t.libelle}}</td>
              <!--<td>
                  <div class="btn-group btn-group-lg">
                      <a href="#"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                  </div>
              </td>-->
              <td><div class="btn-group btn-group-lg">
                      <form action="index.php?page=supType" method="post">
                          <input type="hidden" name="id" value="{{t.ntype}}" />
                          <button><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></button>
                      </form></div>
              </td>
              
          </tr> 
     {% endfor %}
  </table>
  </div>
</div>
   <div class="panel panel-primary">
        <div class="panel-heading">Ajouter un type </div>
         <div class="panel-body">
            <form  class="form-signin" action="index.php?page=ajoutType" method="post" enctype="application/x-www-form-urlencoded">
            <label for="inputLibelle" class="sr-only">Libellé:</label>
            <input type="text" id="inputLibelle" name="inputLibelle" class="form-control" placeholder="Saisir un libelle" required autofocus>
            <button class="btn btn-lg btn-primary btn-block" type="submit" name="btAjouter">Ajouter</button>
            </form>
         </div>    
  </div>
 </div>
 </div>      
    
{% endblock %} 